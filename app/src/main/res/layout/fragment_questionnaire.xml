<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:padding="24dp">

        <!-- Header -->
    <TextView
        android:id="@+id/questionnaire_title"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
        android:text="@string/questionnaire_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:trackColor="@color/grey"
            app:indicatorColor="@color/darkGreen" />

        <!-- Warm-Up Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/warm_up_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/warm_up_title"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Question 1: Relationship Status -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/q_relationship_status"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/relationship_status_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rb_still_in_relationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_still_in_relationship" />

                    <RadioButton
                        android:id="@+id/rb_planning_to_leave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_planning_to_leave" />

                    <RadioButton
                        android:id="@+id/rb_post_separation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_post_separation" />

                </RadioGroup>

                <!-- Question 2: City -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/q_city"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Question 3: Safe Room -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/q_safe_room"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/hint_safe_room"
                    app:boxStrokeColor="@color/darkGreen">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/safe_room_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Question 4: Who do you live with -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/q_live_with"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/live_with_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rb_family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_family" />

                    <RadioButton
                        android:id="@+id/rb_roommates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_roommates" />

                    <RadioButton
                        android:id="@+id/rb_alone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_alone" />

                    <RadioButton
                        android:id="@+id/rb_partner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_partner" />

                </RadioGroup>

                <!-- Question 5: Children -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/q_children"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/children_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/rb_children_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_yes" />

                    <RadioButton
                        android:id="@+id/rb_children_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_no" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/code_word_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/hint_code_word"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/darkGreen">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_word_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Branch-Specific Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/branch_specific_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/branch_specific_title"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Still in Relationship Questions -->
                <LinearLayout
                    android:id="@+id/still_in_relationship_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_abuse_types"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cb_physical_abuse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_physical_abuse" />

                    <CheckBox
                        android:id="@+id/cb_emotional_abuse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_emotional_abuse" />

                    <CheckBox
                        android:id="@+id/cb_financial_abuse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_financial_abuse" />

                    <CheckBox
                        android:id="@+id/cb_other_abuse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_other_abuse" />

    <TextView
                        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_recording_incidents"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/recording_incidents_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rb_recording_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_yes" />

                        <RadioButton
                            android:id="@+id/rb_recording_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_no" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_emergency_contact"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/hint_emergency_contact"
                        app:boxStrokeColor="@color/darkGreen">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emergency_contact_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Planning to Leave Questions -->
                <LinearLayout
                    android:id="@+id/planning_to_leave_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_leave_date"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/hint_leave_date"
                        app:boxStrokeColor="@color/darkGreen">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/leave_date_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_go_bag"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/go_bag_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rb_go_bag_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_yes" />

                        <RadioButton
                            android:id="@+id/rb_go_bag_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_no" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_emergency_money"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/hint_emergency_money"
                        app:boxStrokeColor="@color/darkGreen">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emergency_money_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_safe_place"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/safe_place_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <RadioButton
                            android:id="@+id/rb_safe_place_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_yes" />

                        <RadioButton
                            android:id="@+id/rb_safe_place_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_no" />

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/temp_shelter_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/hint_temp_shelter"
                        android:visibility="gone"
                        app:boxStrokeColor="@color/darkGreen">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/temp_shelter_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Post-Separation Questions -->
                <LinearLayout
                    android:id="@+id/post_separation_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_continued_contact"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/continued_contact_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:id="@+id/rb_continued_contact_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_yes" />

                        <RadioButton
                            android:id="@+id/rb_continued_contact_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_no" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_protection_order"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/protection_order_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <RadioButton
                            android:id="@+id/rb_protection_order_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_yes" />

                        <RadioButton
                            android:id="@+id/rb_protection_order_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_no" />

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/legal_order_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/hint_legal_order"
                        android:visibility="gone"
                        app:boxStrokeColor="@color/darkGreen">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/legal_order_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/q_safety_tools"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/safety_tools_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <RadioButton
                            android:id="@+id/rb_safety_tools_yes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_yes" />

                        <RadioButton
                            android:id="@+id/rb_safety_tools_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/option_no" />

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/equipment_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/hint_equipment"
                        android:visibility="gone"
                        app:boxStrokeColor="@color/darkGreen">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/equipment_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Follow-Up Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/follow_up_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/follow_up_title"
                    android:textColor="@color/darkGreen"
                    android:textSize="18sp"
                    android:textStyle="bold" />

    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/q_support_type"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/support_type_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rb_counselling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_counselling" />

                    <RadioButton
                        android:id="@+id/rb_legal_aid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_legal_aid" />

                    <RadioButton
                        android:id="@+id/rb_financial_guidance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_financial_guidance" />

                    <RadioButton
                        android:id="@+id/rb_co_parenting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/option_co_parenting" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_previous"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/btn_previous"
                android:textColor="@color/darkGreen" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/btn_next"
                app:backgroundTint="@color/darkGreen" />

        </LinearLayout>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_submit"
            android:visibility="gone"
            app:backgroundTint="@color/darkGreen" />

    </LinearLayout>

</ScrollView> 