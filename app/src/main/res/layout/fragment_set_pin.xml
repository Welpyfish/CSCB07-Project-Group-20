<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ScreenStyle">

    <!-- Title -->
    <TextView
        android:id="@+id/setPinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/set_pin"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pinIndicatorLayout" />

    <!-- PIN Indicator (4 dots) -->
    <LinearLayout
        android:id="@+id/pinIndicatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/setPinTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView android:id="@+id/pinDot1" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/pin_dot_unfilled" android:layout_margin="8dp" />
        <ImageView android:id="@+id/pinDot2" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/pin_dot_unfilled" android:layout_margin="8dp" />
        <ImageView android:id="@+id/pinDot3" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/pin_dot_unfilled" android:layout_margin="8dp" />
        <ImageView android:id="@+id/pinDot4" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/pin_dot_unfilled" android:layout_margin="8dp" />
    </LinearLayout>

    <!-- Numeric Keypad -->
    <GridLayout
        android:id="@+id/keypadGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:rowCount="4"
        android:columnCount="3"
        app:layout_constraintTop_toBottomOf="@id/pinIndicatorLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btn1"
            style="@style/PINButton"
            android:text="1" />
        <Button
            android:id="@+id/btn2"
            style="@style/PINButton"
            android:text="2" />
        <Button
            android:id="@+id/btn3"
            style="@style/PINButton"
            android:text="3" />
        <!-- Row 2 -->
        <Button
            android:id="@+id/btn4"
            style="@style/PINButton"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            style="@style/PINButton"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            style="@style/PINButton"
            android:text="6" />
        <!-- Row 3 -->
        <Button
            android:id="@+id/btn7"
            style="@style/PINButton"
            android:text="7" />
        <Button
            android:id="@+id/btn8"
            style="@style/PINButton"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            style="@style/PINButton"
            android:text="9" />
        <!-- Row 4: empty, 0, backspace -->
        <Space
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <Button
            android:id="@+id/btn0"
            style="@style/PINButton"
            android:text="0" />
        <ImageButton
            android:id="@+id/btnBackspace"
            style="@style/PINButton"
            android:src="@drawable/backspace"
            android:contentDescription="@string/backspace"
            android:scaleType="centerInside"
            android:scaleX="1.2"
            android:scaleY="1.2"/>
    </GridLayout>



</androidx.constraintlayout.widget.ConstraintLayout> 