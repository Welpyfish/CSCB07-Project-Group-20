<resources>

    <style name="ButtonPrimary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/darkGreen</item>
        <item name="android:background">@color/bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="PINButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>


    <style name="CheckBoxes">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ScreenStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">24dp</item>
        <item name="android:background">@color/bg</item>
    </style>

    <style name="TitleBarStyle">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cardHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#1D1B20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardDesc">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#1D1B20</item>
    </style>

    <style name="cardLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#1D1B20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
</resources>