{
  "questionnaire": {
    "title": "Safety Assessment",
    "sections": [
      {
        "id": "warm_up",
        "title": "Screening Questions",
        "questions": [
          {
            "id": "relationship_status",
            "type": "radio",
            "question": "Which best describes your situation?",
            "options": [
              {
                "id": "still_in_relationship",
                "text": "Still in a relationship",
                "value": "still_in_relationship"
              },
              {
                "id": "planning_to_leave",
                "text": "Planning to leave",
                "value": "planning_to_leave"
              },
              {
                "id": "post_separation",
                "text": "Post-separation",
                "value": "post_separation"
              }
            ],
            "required": true
          },
          {
            "id": "city",
            "type": "dropdown",
            "question": "What city do you live in?",
            "options": [
              "Toronto",
              "Vancouver",
              "Ottawa",
              "Edmonton"
            ],
            "required": true
          },
          {
            "id": "safe_room",
            "type": "text",
            "question": "Which room in your home feels the safest if you need to get away quickly?",
            "hint": "e.g. Basement, Bedroom, Laundry room",
            "required": true
          },
          {
            "id": "live_with",
            "type": "radio",
            "question": "Who do you live with?",
            "options": [
              {
                "id": "family",
                "text": "Family",
                "value": "family"
              },
              {
                "id": "roommates",
                "text": "Roommates",
                "value": "roommates"
              },
              {
                "id": "alone",
                "text": "Alone",
                "value": "alone"
              },
              {
                "id": "partner",
                "text": "Partner",
                "value": "partner"
              }
            ],
            "required": true
          },
          {
            "id": "children",
            "type": "radio_with_conditional",
            "question": "Do you have children?",
            "options": [
              {
                "id": "children_yes",
                "text": "Yes",
                "value": "yes",
                "conditional_field": {
                  "id": "code_word",
                  "type": "text",
                  "question": "Enter a code word:",
                  "hint": "Code word for children"
                }
              },
              {
                "id": "children_no",
                "text": "No",
                "value": "no"
              }
            ],
            "required": true
          }
        ]
      },
      {
        "id": "branch_specific",
        "title": "Situational Questions",
        "description": "Questions based on your relationship status",
        "branches": {
          "still_in_relationship": {
            "questions": [
              {
                "id": "abuse_types",
                "type": "checkbox",
                "question": "Which form(s) of abuse are you experiencing?",
                "options": [
                  {
                    "id": "physical_abuse",
                    "text": "Physical",
                    "value": "physical"
                  },
                  {
                    "id": "emotional_abuse",
                    "text": "Emotional",
                    "value": "emotional"
                  },
                  {
                    "id": "financial_abuse",
                    "text": "Financial",
                    "value": "financial"
                  },
                  {
                    "id": "other_abuse",
                    "text": "Other",
                    "value": "other"
                  }
                ],
                "required": true
              },
              {
                "id": "recording_incidents",
                "type": "radio",
                "question": "Are you recording the incidents (dates, times, details)?",
                "options": [
                  {
                    "id": "recording_yes",
                    "text": "Yes",
                    "value": "yes"
                  },
                  {
                    "id": "recording_no",
                    "text": "No",
                    "value": "no"
                  }
                ],
                "required": true
              },
              {
                "id": "emergency_contact",
                "type": "text",
                "question": "Name one person you can call immediately in an emergency.",
                "hint": "e.g. mother, father, friend",
                "required": true
              }
            ]
          },
          "planning_to_leave": {
            "questions": [
              {
                "id": "leave_timing",
                "type": "date",
                "question": "When do you plan to leave?",
                "hint": "yyyy-MM-dd",
                "required": true
              },
              {
                "id": "go_bag",
                "type": "radio",
                "question": "Do you have a go-bag packed with essentials?",
                "options": [
                  {
                    "id": "go_bag_yes",
                    "text": "Yes",
                    "value": "yes"
                  },
                  {
                    "id": "go_bag_no",
                    "text": "No",
                    "value": "no"
                  }
                ],
                "required": true
              },
              {
                "id": "money_location",
                "type": "text",
                "question": "Where do you keep emergency cash or cards?",
                "hint": "e.g. closet, under bed",
                "required": true
              },
              {
                "id": "safe_place",
                "type": "radio_with_conditional",
                "question": "Have you identified a safe place to stay?",
                "options": [
                  {
                    "id": "safe_place_yes",
                    "text": "Yes",
                    "value": "yes",
                    "conditional_field": {
                      "id": "temp_shelter",
                      "type": "text",
                      "question": "Enter a temporary shelter:",
                      "hint": "Temporary shelter name"
                    }
                  },
                  {
                    "id": "safe_place_no",
                    "text": "No",
                    "value": "no"
                  }
                ],
                "required": true
              }
            ]
          },
          "post_separation": {
            "questions": [
              {
                "id": "continued_contact",
                "type": "radio",
                "question": "Has the abuser continued any contact?",
                "options": [
                  {
                    "id": "continued_contact_yes",
                    "text": "Yes",
                    "value": "yes"
                  },
                  {
                    "id": "continued_contact_no",
                    "text": "No",
                    "value": "no"
                  }
                ],
                "required": true
              },
              {
                "id": "protection_order",
                "type": "radio_with_conditional",
                "question": "Do you have a protection order? If yes, which type?",
                "options": [
                  {
                    "id": "protection_order_yes",
                    "text": "Yes",
                    "value": "yes",
                    "conditional_field": {
                      "id": "legal_order",
                      "type": "text",
                      "question": "Enter a legal order:",
                      "hint": "Legal order type"
                    }
                  },
                  {
                    "id": "protection_order_no",
                    "text": "No",
                    "value": "no"
                  }
                ],
                "required": true
              },
              {
                "id": "safety_tools",
                "type": "radio_with_conditional",
                "question": "Are you using any safety tools (cameras, door alarms)?",
                "options": [
                  {
                    "id": "safety_tools_yes",
                    "text": "Yes",
                    "value": "yes",
                    "conditional_field": {
                      "id": "equipment",
                      "type": "text",
                      "question": "Enter an equipment:",
                      "hint": "Equipment type"
                    }
                  },
                  {
                    "id": "safety_tools_no",
                    "text": "No",
                    "value": "no"
                  }
                ],
                "required": true
              }
            ]
          }
        }
      },
      {
        "id": "follow_up",
        "title": "Follow-Up & Stabilization",
        "description": "Support resources and next steps",
        "questions": [
          {
            "id": "support_choice",
            "type": "radio",
            "question": "Which type of support would help most right now?",
            "options": [
              {
                "id": "counselling",
                "text": "Counselling",
                "value": "counselling"
              },
              {
                "id": "legal_aid",
                "text": "Legal aid",
                "value": "legal_aid"
              },
              {
                "id": "financial_guidance",
                "text": "Financial guidance",
                "value": "financial_guidance"
              },
              {
                "id": "co_parenting",
                "text": "Co-parenting resources",
                "value": "co_parenting"
              }
            ],
            "required": true
          }
        ]
      }
    ]
  },
  "tips": {
    "relationship_status": {
      "Still in a relationship": "Keep this plan updated, and remember you can always reach out if things escalate.",
      "Planning to leave": "Start packing small items now so you're ready when you decide to leave.",
      "Post-separation": "It's normal to feel unsettled, refer back to this plan whenever you need a safety reminder."
    },
    "city": "Save the local support numbers for {city} in your phone's speed-dial so you can call immediately if you need help.",
    "safe_room": "Keep your essentials (phone, keys, and a small flashlight) in {safe_room} so you can grab them instantly when you need to leave.",
    "live_with": {
      "Family": "Let those you live with: Family know your safe room and cue‐word so they can support you in an emergency.",
      "Roommates": "Let those you live with: Roommates know your safe room and cue‐word so they can support you in an emergency.",
      "Alone": "Since you live alone, identify a trusted neighbor or friend and share your safe room location with them.",
      "Partner": "Because you live with your partner, keep your safety plan hidden (in {safe_room}), and consider storing a digital copy in a password-protected note they won't see."
    },
    "children": {
      "Yes": "Practice your safety plan with your children so that when they hear {code_word}, they know exactly what to do.",
      "No": "Even without children, it helps to identify a second safe space in your home."
    },
    "abuse_types": "If you face {abuse_type} abuse, remember you don't have to face it alone. Reach out to your emergency contact right away.",
    "recording_incidents": {
      "Yes": "Log each incident (date, time, and a brief note) so you have clear records if needed later.",
      "No": "Even brief notes on your phone can be helpful. Start logging today."
    },
    "emergency_contact": "Save {contact_name} in your phone under a code-word so you can quietly call them when you need help.",
    "leave_timing": "Set a real target {leave_timing} and pack one essential item each day until you're ready.",
    "go_bag": {
      "Yes": "Great! Keep your go-bag in a hidden spot so you can grab it quickly.",
      "No": "Pack a simple go-bag today with essentials like your ID, some cash, and a charger."
    },
    "money_location": "Stash some cash and a spare card in {money_location}, a spot your partner won't suspect.",
    "safe_place": {
      "Yes": "Make sure {temp_shelter} knows you may arrive unexpectedly and how to contact you.",
      "No": "Reach out to Victim Services Toronto or a trusted friend now to secure a shelter option before you leave."
    },
    "continued_contact": {
      "Yes": "Since you've heard from them, stay vigilant and keep your protection order handy if you have one.",
      "No": "Even without contact, keep your doors locked and your phone on in case you need to call 911."
    },
    "protection_order": {
      "Yes": "Carry your {legal_order} at all times and share copies with anyone who needs to know.",
      "No": "Consider applying for a protection order; it can help deter unwanted contact."
    },
    "safety_tools": {
      "Yes": "Make sure your {equipment} is in working order and placed where you'll notice it.",
      "No": "Consider installing a simple door alarm or camera to alert you to unexpected entry."
    },
    "support_choice": "Reach out to {support_choice} - they can offer the specialized help you need right now."
  }
}